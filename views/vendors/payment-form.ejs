<%- include('../partials/head') %>
<%- include('../partials/nav') %>
<main class="main">
  <header class="page-header">
    <h1>Add payment bill – <%= vendor.name %></h1>
    <a href="/vendors/<%= vendor._id %>" class="btn">Back to <%= vendor.name %></a>
  </header>
  <p class="muted">This amount will be deducted from your bank balance.</p>

  <form action="/vendors/<%= vendor._id %>/payments" method="post" enctype="multipart/form-data" class="form form-card">
    <label>Amount (₹)</label>
    <input type="number" name="amount" min="0" step="0.01" required>

    <label>Transaction ID (optional)</label>
    <input type="text" name="transactionId">

    <label>Note (optional)</label>
    <input type="text" name="note">

    <label>Payment / receipt image (optional)</label>
    <input type="file" name="image" accept="image/*">

    <label>Date</label>
    <input type="datetime-local" name="date" value="<%= new Date().toISOString().slice(0,16) %>">

    <button type="submit" class="btn btn-primary">Add payment bill</button>
  </form>
</main>
<%- include('../partials/footer') %>
