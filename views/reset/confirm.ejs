<%- include('../partials/head') %>
<%- include('../partials/nav') %>
<main class="main">
  <header class="page-header">
    <h1>Clear all data</h1>
  </header>
  <div class="panel" style="max-width: 420px;">
    <p>This will permanently delete all <strong>products</strong>, <strong>categories</strong>, <strong>subcategories</strong>, <strong>sales</strong>, <strong>payments</strong>, <strong>vendors</strong>, <strong>purchase bills</strong>, and <strong>payment bills</strong>. You cannot undo this.</p>
    <p class="muted">Enter your 6-digit login password to confirm.</p>
    <% if (typeof error !== 'undefined' && error) { %>
    <p class="login-error"><%= error %></p>
    <% } %>
    <form action="/reset" method="post" id="resetForm" class="form reset-form">
      <label for="reset-password">Password</label>
      <input type="password" id="reset-password" name="password" inputmode="numeric" pattern="[0-9]*" maxlength="6" minlength="6" placeholder="••••••" autocomplete="off" required>
      <div class="reset-actions">
        <button type="submit" class="btn btn-danger">Clear all data</button>
        <a href="/" class="btn">Cancel</a>
      </div>
    </form>
  </div>
</main>
<%- include('../partials/footer') %>
