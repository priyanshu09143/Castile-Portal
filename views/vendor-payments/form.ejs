<%- include('../partials/head') %>
<%- include('../partials/nav') %>
<main class="main">
  <header class="page-header">
    <h1>Add vendor payment</h1>
    <a href="/vendor-payments" class="btn">Back to Vendor payments</a>
  </header>
  <p class="muted">This amount will be deducted from your bank balance.</p>

  <form action="/vendor-payments" method="post" enctype="multipart/form-data" class="form form-card">
    <label>Vendor</label>
    <select name="vendorId" required>
      <option value="">Select vendor</option>
      <% vendors.forEach(v => { %>
      <option value="<%= v._id %>"><%= v.name %></option>
      <% }) %>
    </select>

    <label>Amount (â‚¹)</label>
    <input type="number" name="amount" min="0" step="0.01" required>

    <label>Transaction ID (optional)</label>
    <input type="text" name="transactionId">

    <label>Note (optional)</label>
    <input type="text" name="note">

    <label>Payment image / receipt (optional)</label>
    <input type="file" name="image" accept="image/*">

    <label>Date</label>
    <input type="datetime-local" name="date" value="<%= new Date().toISOString().slice(0,16) %>">

    <button type="submit" class="btn btn-primary">Add vendor payment</button>
  </form>
</main>
<%- include('../partials/footer') %>
